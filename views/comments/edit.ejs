<%- include('../partials/header'); %> 
<div class="container">
    <div class="col-md-12">
        <h2 class="form-title">Edit comment</h2>
        <div class="row">
            <div class="custom-form">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" cols="45" rows="6" aria-required="true"><%= comment.text%></textarea>
                </div>  
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a title="Go Back" href="/campgrounds"><i class="back-icon"><img src="https://img.icons8.com/color/48/000000/back--v1.png"/></i>Back</a>
        </div> 
    </div>
</div>
<%- include('../partials/footer'); %> 