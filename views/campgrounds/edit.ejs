<%- include('../partials/header'); %> 
<div class="container">
    <div class="col-md-12">
        <h2 class="form-title">Edit <%= campground.name %></h2>
        <div class="row">
            <div class="custom-form">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <textarea class="form-control" id="desc" name="campground[desc]" cols="45" rows="6" aria-required="true"><%= campground.desc %></textarea>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" id="price" name="campground[price]" value="<%= campground.price %>" min="0.00" step="1.00">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input class="form-control" type="text" id="address" name="campground[address]" value="<%= campground.address %>">
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input class="form-control" type="number" id="phone" name="campground[phone]" value="<%= campground.phone %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a title="Go Back" href="/campgrounds"><i class="back-icon"><img src="https://img.icons8.com/color/48/000000/back--v1.png"/></i>Back</a>
        </div>
        </div> 
    </div>
</div>

<%- include('../partials/footer'); %> 