<%- include('../partials/header'); %> 
<div class="container">
    <div class="col-md-12">
        <h2 class="form-title">Create a new campgound</h2>
        <div class="row">
            <div class="custom-form">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Camp Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="desc" cols="45" rows="6" aria-required="true" placeholder="Camp Description"></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.00" step="1.00" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="address" placeholder="Address" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="phone" size="10" minlength="10" placeholder="Phone Number" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a title="Go Back" href="/campgrounds"><i class="back-icon"><img src="https://img.icons8.com/color/48/000000/back--v1.png"/></i>Back</a>
        </div> 
    </div>
    </div>
</div>

<%- include('../partials/footer'); %> 